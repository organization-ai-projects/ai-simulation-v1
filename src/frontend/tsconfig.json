{
  "compilerOptions": {
    "target": "ES2020", // Améliore la compatibilité avec des fonctionnalités modernes
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Garde les bibliothèques modernes
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Empêche la génération de fichiers `.js`
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Utilise le runtime JSX moderne de React
    "types": ["vite/client"] // Ajoute les types spécifiques à Vite
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"] // Exclut les répertoires inutiles
}
